upstream <%= app %> {
  <% ports.each do |port| %>
  server localhost:<%= port %> fail_timeout=0;
  <% end %>
}

server {
  access_log <%= log %>/<%= app %>-nginx-access.log combined buffer=0k;
  error_log  <%= log %>/<%= app %>-nginx-error.log;

  listen 80;
  server_name <%= additional_domains %> <%= app %>.<%= base_domain %>;


  <% if use_ssl %>
  listen 443 ssl;

  <% if ssl_cert_path && ssl_key_path %>
  ssl_certificate <%= ssl_cert_path %>;
  ssl_certificate_key <%= ssl_key_path %>;
  <% end %>

  <% if force_ssl %>
  if ($ssl_protocol = "") {
     rewrite ^https://$server_name$request_uri? permanent;
  }
  <% end %>
  <% end %>

  <% if force_domain %>
  if ( $host != '<%= force_domain %>' ) {
    rewrite ^http://<%= force_domain %>$request_uri? permanent;
  }
  <% end %>

  root <%= engine.root %>/public;

  <% if File.exists?(File.join(engine.root, '.nginx')) %>
  include <%= engine.root %>/.nginx;
  <% end %>

  try_files $uri/index.html $uri.html $uri @app;

  location ~* ^.+.(jpg|jpeg|gif|css|png|js|ico|xml)$ {
    try_files $uri @app;
    add_header Cache-Control public;
    expires max;
  }

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://<%= app %>;
  }
}
